---
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";

const events = [
  {
    title: "Online Blind Speed Dating",
    description:
      "Join a fun and engaging online speed dating session where you'll connect with like-minded individuals in a blind format.",
    date: "Jan 20, 2025",
    time: "7:00 PM",
    icon: "src:chat-outline",
  },
  {
    title: "Café Blind Date Night",
    description:
      "An offline speed dating event at a cozy café in Rotterdam. Enjoy the excitement of meeting people without profiles.",
    date: "Jan 25, 2025",
    time: "6:30 PM",
    icon: "src:coffee",
  },
  {
    title: "Game Night: Blind Match Edition",
    description:
      "A fun-filled evening of games and blind connections. Perfect for breaking the ice and making new friends.",
    date: "Feb 5, 2025",
    time: "8:00 PM",
    icon: "src:gamepad-outline",
  },
];

---

<section class="w-full py-12 bg-gray-100">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
      Upcoming Events
    </h2>
    <p class="text-lg mt-4 text-slate-600">
      Explore our curated events designed to help you connect, whether online or offline. Find your next adventure in Rotterdam!
    </p>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
      {
        events.map((event) => (
          <div class="flex gap-4 items-start">
            <div class="mt-1 bg-blue-500 rounded-full p-2 w-8 h-8 shrink-0">
              <Icon class="text-white" name={event.icon} />
            </div>
            <div>
              <h3 class="font-semibold text-lg">{event.title}</h3>
              <p class="text-slate-500 mt-2 leading-relaxed">{event.description}</p>
              <p class="text-slate-400 mt-1 text-sm">
                {event.date} | {event.time}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
