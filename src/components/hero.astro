---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Blind speed dating event"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Blind Speed Dating – Online & Offline Events
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Discover connections faster with our unique blind speed dating experience designed for 18–30-year-olds in Rotterdam. Join exciting online or offline events and meet like-minded people!
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/events"
        class="flex gap-2 items-center justify-center bg-blue-500 text-white px-6 py-3 rounded-md hover:bg-blue-600 transition">
        <Icon class="text-white w-5 h-5" name="src:calendar-clock" />
        View Events
      </Link>
      <Link
        href="/how-it-works"
        class="flex gap-2 items-center justify-center border border-blue-500 text-blue-500 px-6 py-3 rounded-md hover:bg-blue-500 hover:text-white transition">
        <Icon class="text-blue-500 w-5 h-5" name="src:information-outline" />
        How It Works
      </Link>
    </div>
  </div>
</main>
